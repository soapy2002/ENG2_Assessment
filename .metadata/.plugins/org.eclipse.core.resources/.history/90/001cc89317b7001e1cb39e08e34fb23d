@namespace(uri="Y3887821", prefix="")
package Y3887821;

class Social {
  val Microservice[*] microservices;
}

// Microservice
class Microservice {
  val Event[*] events;
  val EventStream[*] subscribesTo;
  val EventStream[*] publishesTo;
  val HTTPResource[*] httpResources;
  attr String name;
}

class Event {
  val EventField[*] fields;
  attr String name;
}

class EventField {
  attr String name;
  attr String type;
}

class EventStream {
  attr String name;
  val Event type;
}

class HTTPResource {
  val Request[*] request;
  val Response[*] response;
  attr HTTPMethod method;
  attr String endpoint;
}

enum HTTPMethod {
  GET;
  POST; 
  PUT;
  DELETE;
}

class Request {
  attr String name;
  attr String type;
  attr String description;
}

class Response {
  attr String name;
  attr String type;
  attr String description;
}